<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- 设置字符边距 -->
    <padding
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp" />
    
    <!-- 设置圆角矩形 -->
    <corners android:radius="3dp" />

    <!-- 边框样式 -->
    <stroke
        android:width="3px"
        android:color="#D4D4D4" />

    <!-- 设置背景色 -->
    <solid android:color="#ffffff" />

</shape>
